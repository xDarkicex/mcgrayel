<!doctype html>
<html>
{{template "head"}}
<body>
<div class="bg"></div>
<div Class="wrapper">
	<div class="header">
	{{template "fadein"}}
<section class="contact-top">
<p><span class="hide">  </span>  <a href="tel:5592997660" class="bold">559-299-7660</a> | <a href="mailto:#">Support</a> | <span class="lang"><select><option>Language</option><option>English</option><option>French</option><option>portuguese</option><option>Spanish</option></select></span></p>
</section>
{{template "nav"}}
</div><!-- End Header -->
<div class="content">
<div class="company-name-container"></div><!-- end company name -->
	<div class="flexBreak">
	  <div class="divider"><span></span></div><!-- Span Line Break page -->
	</div>
</div>
<div class="body">
    <div class="row-lg-12">
      <div class="col">
        <h1>Add New Product to EasyCareWater.com</h1>
        <div class="divider"><span></span></div><!-- Span Line Break page -->
        <form method="post" action="../product/new">
          <fieldset>
            <label>
              Image
             <input type="file" name="image" accept="image/*">
            </label>
            <label>
              Product Name
              <input type="text" name="name">
            </label>
            <label>
              Product Tag line
              <input type="text" name="tag">
            </label>
            <div class="keyPoints">
              <label>
                Key Points
                <input type="text" name="points">
              </label>
            </div>
            <button class="addPoint">Add Key Point</button>
            <button class="removePoint">Remove</button>
            <label>
              Product Summary
              <textarea type="text" name="summary" rows="4" cols="50"></textarea>
            </label>
            <label>
              How it works
              <textarea type="text" name="howItWorks" rows="4" cols="50"></textarea>
            </label>
            <div class="features">
              <label>
                Product Features
                <input type="text" name="features">
              </label>
            </div>
            <button class="addFeature">Add Feature</button>
            <button class="removeFeature">Remove</button>
            <div class="sellingPoints">
              <label>
                Selling Points
                <input type="text" name="sellingPoints">
              </label>
            </div>
            <button class="addSellingPoints">Add Selling Point</button>
            <button class="removeSellingPoints">Remove</button>
            <div class="benefits">
              <label>
                Key Product Benefits
                <input type="text" name="benefits">
              </label>
            </div>
            <button class="addBenefit">Add Selling Point</button>
            <button class="removeBenefit">Remove</button>
            <label>
              Noice or Special instructions
              <input type="text" name="notice">
          </fieldset>
          <input type="submit" value="create">
        </form>
      </div>
    </div>
</div>
<div class="footer">
<p>Mcgrayel CompanyÂ© 1978-2017</p><p><a href="http://easycarewater.com">http://easycarewater.com</a></p>
</div><!-- End Footer -->

</div><!-- End Wrapper-->

	<div class="slide-handler"></div>
	<div class="menu-wrapper">
	<div class="menu-arrow">
		<img src="../static/assets/images/back.png" class="arrow-img">
	</div>
		{{template "menu"}}
	</div>

<div class="top-menu">
